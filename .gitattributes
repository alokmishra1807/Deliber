# Auto detect text files and normalize line endings to LF
* text=auto

# Dart files
*.dart linguist-language=Dart

# Flutter/Dart specific
pubspec.yaml linguist-language=YAML
pubspec.lock linguist-language=YAML
analysis_options.yaml linguist-language=YAML

# Ignore generated files and build outputs for language detection
build/ linguist-generated=true
.dart_tool/ linguist-generated=true
android/app/debug/ linguist-generated=true
android/app/profile/ linguist-generated=true
android/app/release/ linguist-generated=true
ios/Flutter/ linguist-generated=true
web/main.dart.js linguist-generated=true
windows/flutter/ linguist-generated=true
macos/Flutter/ linguist-generated=true
linux/flutter/ linguist-generated=true

# Ignore HTML files in build directories
build/**/*.html linguist-generated=true
android/**/*.html linguist-generated=true
ios/**/*.html linguist-generated=true
